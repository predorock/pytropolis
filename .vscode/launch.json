    "version": "0.2.0",
    "configurations": [
        {
            "name": "PYT Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "PYT_HOME_DIR": "./volumes/pytropolis/"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": false,
            "justMyCode": false
        }
    ]
}